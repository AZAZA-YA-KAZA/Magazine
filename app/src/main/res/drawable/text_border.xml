<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон с закругленными углами -->
    <item>
        <shape>
            <solid android:color="#D35E39" />
            <corners
                android:radius="40dp"
                android:bottomRightRadius="100dp"
                android:topRightRadius="100dp" />
        </shape>
    </item>
    <!-- Правая рамка -->
    <item
        android:right="3dp"
    android:left="28dp">
    <shape>
        <stroke
            android:color="#33180F"
            android:width="60dp" /> <!-- Ширина рамки справа -->
        <corners
            android:bottomRightRadius="100dp"
            android:topRightRadius="100dp" />
    </shape>
    </item>
</layer-list>